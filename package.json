{
	"name": "lithesome",
	"version": "0.10.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"build:site": "vite build",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check .",
		"format": "prettier --write ."
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Gibbu/lithesome.git"
	},
	"bugs": {
		"url": "https://github.com/Gibbu/svoast/issues"
	},
	"homepage": "https://lithesome.vercel.app",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "5.0.0-next.99"
	},
	"devDependencies": {
		"@bitmachina/highlighter": "1.0.0-alpha.7",
		"@steeze-ui/lucide-icons": "^1.2.0",
		"@steeze-ui/svelte-icon": "^1.5.0",
		"@sveltejs/adapter-vercel": "^5.1.1",
		"@sveltejs/kit": "^2.5.3",
		"@sveltejs/package": "^2.3.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"@tailwindcss/typography": "^0.5.10",
		"@types/nprogress": "^0.2.3",
		"autoprefixer": "^10.4.18",
		"clsx": "^2.1.0",
		"fenceparser": "^2.2.0",
		"mdsvex": "^0.11.0",
		"nprogress": "^0.2.0",
		"postcss": "^8.4.35",
		"postcss-load-config": "^5.0.3",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.3",
		"prettier-plugin-tailwindcss": "^0.5.12",
		"prismjs": "^1.29.0",
		"publint": "^0.2.7",
		"rehype-slug": "^6.0.0",
		"remark-external-links": "^9.0.1",
		"shiki": "^1.2.0",
		"svelte": "5.0.0-next.115",
		"svelte-check": "^3.6.6",
		"tailwind-merge": "^2.2.1",
		"tailwindcss": "^3.4.1",
		"tslib": "^2.6.2",
		"typescript": "^5.4.2",
		"vite": "^5.1.5"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"@floating-ui/dom": "^1.6.3",
		"focus-trap": "^7.5.4"
	}
}
