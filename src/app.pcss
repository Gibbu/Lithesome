/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	:root {
		--accent: theme(colors.teal.500);
		--nav-height: theme(size.20);
	}

	::selection {
		background: theme(colors.teal.500);
		color: theme(colors.white);
	}

	.dark ::selection {
		background: theme(colors.teal.600);
		color: theme(colors.black);
	}
}

@layer components {
	.docprose {
		@apply prose prose-teal max-w-full dark:prose-invert prose-headings:tracking-wide prose-h3:text-lg prose-blockquote:text-neutral-500 prose-tr:grid prose-tr:grid-cols-[.4fr,.6fr,1fr] prose-tr:py-3 dark:prose-blockquote:border-neutral-600 dark:prose-blockquote:text-neutral-500 dark:prose-thead:border-white/15 dark:prose-tr:border-white/10;
	}
}

@layer utilities {
	.wrap {
		@apply mx-auto w-full max-w-screen-xl border-x border-neutral-200 dark:border-neutral-900;
	}
	.flex-centre {
		@apply flex items-center justify-center;
	}
	.focusOutline {
		@apply focus:outline focus:outline-2 focus:outline-offset-2 focus:outline-black dark:focus:outline-white;
	}
	.highlight {
		box-shadow: inset 0px 1px 0 1px hsl(0 0 0% / 0.05);
	}
	.dark .highlight {
		box-shadow: inset 0px 1px 0 1px hsl(0 0 100% / 0.05);
	}
}

.preview-codeblock pre {
	@apply max-h-[450px] min-h-[450px] overflow-y-auto !border-none p-6 dark:!bg-transparent;
}
pre {
	@apply relative overflow-x-auto !rounded-md border !bg-neutral-100 !text-sm !leading-relaxed dark:border-neutral-800 dark:!bg-neutral-900/50;
}
pre .language-id {
	@apply pointer-events-none absolute right-4 top-2 select-none text-xs text-white/30;
}
pre[data-code-title] {
	@apply !pt-12;
}
pre[data-code-title]::before {
	content: attr(data-code-title);
	@apply absolute left-4 top-4 text-sm;
}
table {
	@apply !text-left;
}
table code:not(pre code)::before,
table code:not(pre code)::after {
	content: none !important;
}

html.dark .shiki,
html.dark .shiki span {
	color: var(--shiki-dark) !important;
	font-style: var(--shiki-dark-font-style) !important;
	font-weight: var(--shiki-dark-font-weight) !important;
	text-decoration: var(--shiki-dark-text-decoration) !important;
}
[data-lastpass-icon-root] {
	@apply hidden;
}
.prose small {
	@apply -mt-3 block text-neutral-500;
}
